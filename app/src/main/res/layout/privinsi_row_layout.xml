<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0.5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/provinsi_img"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />
    <TextView
        android:id="@+id/nama_provinsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Android Example"
        android:background="@color/colorPrimary"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:layout_below="@id/provinsi_img"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/total_wisata_provinsi"
        android:layout_alignEnd="@id/nama_provinsi"
        android:layout_alignRight="@id/nama_provinsi"
        android:layout_below="@id/provinsi_img"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="#AAEEEEEE"
        android:textSize="10sp"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/nama_provinsi" />

</RelativeLayout>